<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjl.activity.AllDialogActivity">
    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/white"
        android:background="@drawable/ripple_primary_with_light"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="菜单"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/white"
        android:background="@drawable/ripple_gray_with_light"
        android:padding="20dp"
        android:layout_marginRight="100dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:text="分享"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="提示框1"
        android:textColor="@color/white"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/ripple_red_with_gray"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="提示框2"
        android:textColor="@color/white"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/ripple_primary_with_light"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt" />

    <TextView
        android:id="@+id/tv_bottom_dialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="底部弹出框"
        android:textColor="@color/white"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/ripple_primary_with_light"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog" />

    <TextView
        android:id="@+id/tv_bottom_dialog2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="底部弹出框2"
        android:textColor="@color/white"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/ripple_primary_with_light"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_bottom_dialog" />


    <TextView
        android:id="@+id/tv_mul_choice_dialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="多选弹出框"
        android:textColor="@color/white"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/ripple_primary_with_light"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bottom_dialog2"
        android:layout_marginTop="20dp"/>




</android.support.constraint.ConstraintLayout>
