<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--dialog标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!--dialog 文字或其它自定义布局-->
        -

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rl_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="6dip"
                    android:text="图书信息表"
                    android:textColor="@color/no4_black"
                    android:textSize="12sp" />

                <com.sjl.view.DownLoadProgressbar
                    android:id="@+id/dp_game_progress"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/tv_title" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dp_game_progress"
                    android:layout_marginTop="2dip"
                    android:text="10/9999"
                    android:textColor="@color/no5_gray_silver"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_progress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="6dip"
                    android:text="层架信息表"
                    android:textColor="@color/no4_black"
                    android:textSize="12sp" />

                <com.sjl.view.DownLoadProgressbar
                    android:id="@+id/dp_game_progress2"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/tv_title2" />

                <TextView
                    android:id="@+id/tv_size2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dp_game_progress2"
                    android:layout_marginTop="2dip"
                    android:text="10/9999"
                    android:textColor="@color/no5_gray_silver"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>


        <!--线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_b5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="取消"
                android:textColor="#E88F61"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>